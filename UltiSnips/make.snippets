snippet bmkpp "Basic Makefile [c++]" bt
CXX= g++
CXXFLAGS= -std=c++14 -pedantic -Wall -Wextra -Werror
CXXFLAGS+= -g3

NAME_EXEC= ${0:PROGRAM_NAME}
OBJ= main.o

.PHONY: all clean

all: $(OBJ)
	$(CXX) -o $(NAME_EXEC) $^

clean:
	rm *.o
	rm $(NAME_EXEC)
endsnippet

snippet pmkpp "Parent Makefile [c++]" bt
CXX= g++
CXXFLAGS= -std=++14 -pedantic -Wall -Wextra -Werror
CXXFLAGS+= -g3

all:
	make -C src/ all

clean:
